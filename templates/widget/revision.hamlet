#{sharer}/#{repo} #

$maybe rev <- mrev
  $case rev
    $of RevTag t
      #{cgTitle t} #{cgTimeFmt t}
    $of RevTagPlus t n p
      #{cgTitle t} + #{n} patches (#{T.take 10 $ cgHash p} #{cgTimeFmt p})
    $of RevPatch p
      #{T.take 10 $ cgHash p} #{cgTimeFmt p}

  \ (total: #{changes} patches)
$nothing
  (unknown revision)
