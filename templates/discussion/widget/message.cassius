.message
  list-style-type: none
  background-color: #333
  border-radius: 10px
  margin-top: 1rem
  margin-bottom: 1rem
  margin-right: 0.25rem
  margin-left: -3rem
  padding: 1rem

.griddiv
  display: grid 
  grid-template-columns: 1fr 1fr 1fr
  justify-items: stretch

.author
   grid-area: 1 / 1 / 1 / 1

.time
  grid-area: 1 / 3 / 1 / 3
  text-align: right

.content
  grid-area: 2 / 1 / 3 / 4
  text-align: left
  vertical-align: top

.reply
  grid-area: 4 / 1 / 4 / 1
